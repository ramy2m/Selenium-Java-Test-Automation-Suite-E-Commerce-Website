
{
  "info": {
    "_postman_id": "d41a1e40-334b-4e4e-a00c-getdel12345",
    "name": "DummyJSON API - GET & DELETE Only",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [

    {
      "name": "Get User (GET)",
      "request": {
        "method": "GET",
        "url": "https://dummyjson.com/users/1"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"Status is 200\",()=>pm.response.to.have.status(200));",
            "pm.test(\"User ID is correct\",()=>pm.expect(pm.response.json().id).to.eql(1));",
            "pm.test(\"First name exists\",()=>pm.expect(pm.response.json().firstName).to.be.a('string'));"
          ]
        }
      }]
    },

    {
      "name": "Delete User (DELETE)",
      "request": {
        "method": "DELETE",
        "url": "https://dummyjson.com/users/1"
      },
      "event": [{
        "listen": "test",
        "script": {
          "exec": [
            "pm.test(\"Status is 200\",()=>pm.response.to.have.status(200));",
            "pm.test(\"User deleted\",()=>pm.expect(pm.response.json().isDeleted).to.be.true);",
            "pm.test(\"ID correct\",()=>pm.expect(pm.response.json().id).to.eql(1));"
          ]
        }
      }]
    }

  ]
}
